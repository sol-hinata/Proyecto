<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Sit.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/uploadify.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.uploadify-3.1.min.js")" 

      type="text/javascript"></script>
    @* allow BotDetect stylesheet includes in selected Views *@
    @RenderSection("BotDetectStyles", required: false)
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                
            </div>
            @if (Request.IsAuthenticated)
            {
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
			<!-- ENDS nav bar holder -->
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("PRINCIPAL", "Index", "Publicacion")</li>
                    <li>@Html.ActionLink("PERFIL", "Perfil", "Editperfil")</li>
                    <li>@Html.ActionLink("ARTICULO", "Articulo", "Publicacion")</li>
                </ul>
            </nav>
            }
            else
            { <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("LogOn", "LogOn", "Account")</li>
                     <li>@Html.ActionLink("PRINCIPAL", "index", "Publicacion")</li>
                </ul>
            </nav>
            }
        </header>
        <section id="main">
          <div id ="maincontenido">
            @RenderBody()
        </div>
        </section>
        <footer>INGENIERIA DE SISTEMAS 2012
        </footer>
    </div>
</body>
</html>
